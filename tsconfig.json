{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    "module": "esnext",
    "target": "esnext",
    "jsx": "react-native",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "typeRoots": ["./src/types"],
  },
}
